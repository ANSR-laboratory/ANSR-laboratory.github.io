	month = apr,
	year = {2009},
	pmid = {19138702},
	pmcid = {PMC2701656},
	keywords = {Cocaine/administration \& dosage/*pharmacology, Humans, Magnetic Resonance Imaging/*methods, Male, Placebos, Visual Cortex/*drug effects/physiology},
	pages = {277--282},
}

@article{nickerson_cue_2011,
