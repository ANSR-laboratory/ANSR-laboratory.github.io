	keywords = {Adult, Algorithms, Cerebral Cortex/*diagnostic imaging, Computer Simulation, Female, Functional Neuroimaging/*methods, Humans, Image Processing, Computer-Assisted/*methods, Independent component analysis (ICA), Magnetic Resonance Imaging/*methods, Male, Model order, Models, Statistical, Nerve Net/*diagnostic imaging, Principal Component Analysis, Stability, Tensor clustering, fMRI},
