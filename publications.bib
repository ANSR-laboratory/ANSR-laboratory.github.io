	keywords = {*Sex Characteristics, Adult, Attention/*physiology, Connectome, Female, Humans, Magnetic Resonance Imaging, Male, Memory, Short-Term/physiology, Menstrual Cycle/physiology, Nerve Net/diagnostic imaging/*physiology, Reward},
	pages = {e0199049},
}

@article{sneider_adolescent_2018,
